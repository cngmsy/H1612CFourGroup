<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:background="@color/gray3"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="13.9特价套餐"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100"
            android:layout_margin="10dp"
            android:background="@mipmap/food_list_item_image_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="尖椒土豆丝"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_zucheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="尖椒土豆丝+千叶豆腐+时蔬"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_yueshaoshounum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:maxLines="1"
                android:text="月售137份"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_newprice"
                    android:layout_width="@dimen/x150"
                    android:layout_height="wrap_content"
                    android:text="￥30"
                    android:maxEms="6"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#be5048"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_oldprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_newprice"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_newprice"
                    android:text="￥60"
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ib_minus"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/y40"
                        android:background="@mipmap/food_button_minus"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/ib_add"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/y40"
                        android:background="@mipmap/food_button_add" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
